<suite name="book-flight-module" parallel="tests">

    <!--    Test for 1 passenger -->
    <test name="book-flight-1-pass">
        <parameter name="noOfPassengers" value="1"/>
        <parameter name="expectedPrice" value="$584 USD"/>
        <classes>
            <class name="com.flighttickets.tests.BookFlightTests"/>
        </classes>
    </test>

    <!--    Test for 2 passengers -->
    <test name="book-flight-2-pass">
        <parameter name="noOfPassengers" value="2"/>
        <parameter name="expectedPrice" value="$1169 USD"/>
        <classes>
            <class name="com.flighttickets.tests.BookFlightTests"/>
        </classes>
    </test>

    <!--    Test for 3 passengers -->
    <test name="book-flight-3-pass">
        <parameter name="noOfPassengers" value="3"/>
        <parameter name="expectedPrice" value="$1753 USD"/>
        <classes>
            <class name="com.flighttickets.tests.BookFlightTests"/>
        </classes>
    </test>

    <!--    Test for 4 passengers -->
    <test name="book-flight-4-pass">
        <parameter name="noOfPassengers" value="4"/>
        <parameter name="expectedPrice" value="$2338 USD"/>
        <classes>
            <class name="com.flighttickets.tests.BookFlightTests"/>
        </classes>
    </test>

</suite>